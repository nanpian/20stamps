<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="popupAnimation">
        <item name="android:windowEnterAnimation">@anim/popupwindow_in</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_out</item>
    </style>

    <style name="paypal_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">@dimen/paypal_edittext_textsize</item>
        <item name="android:paddingBottom">@dimen/activity_paypal_activity_text_pending_bottom</item>
        <item name="android:paddingTop">@dimen/activity_paypal_activity_text_pending_top</item>
        <item name="android:paddingStart">@dimen/activity_paypal_activity_text_pending_start</item>
        <item name="android:paddingEnd">@dimen/activity_paypal_activity_text_pending_end</item>
        <item name="android:gravity">bottom|start</item>
    </style>

    <style name="paypal_shipping_method_style" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textSize">@dimen/paypal_edittext_textsize</item>
        <item name="android:paddingBottom">@dimen/activity_paypal_activity_text_pending_bottom</item>
        <item name="android:paddingTop">@dimen/activity_paypal_activity_text_pending_top</item>
        <item name="android:paddingStart">@dimen/activity_paypal_activity_text_pending_start</item>
        <item name="android:paddingEnd">@dimen/activity_paypal_activity_text_pending_end</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>