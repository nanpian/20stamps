<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <RelativeLayout 
	    android:id="@+id/loginview_frame"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <View 
	        android:id="@+id/login_title_head_space"
	        android:layout_width="match_parent"
	        android:layout_height="10dp"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:background="#b9b9b9"
	        />
	    <View 
	        android:id="@+id/login_title_seperator"
	        android:layout_width="2dp"
	        android:layout_height="28dp"
	        android:layout_below="@+id/login_title_head_space"
	        android:layout_centerHorizontal="true"
	        android:background="#aeaeae"
	        />
	    <TextView 
	        android:id="@+id/login_title_login"
	        android:layout_width="match_parent"
	        android:layout_height="28dp"
	        android:layout_toLeftOf="@+id/login_title_seperator"
	        android:layout_alignBottom="@+id/login_title_seperator"
	        android:gravity="center"
	        android:text="Login"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:background="#b9b9b9"/>
	    <TextView 
	        android:id="@+id/login_title_register"
	        android:layout_width="match_parent"
	        android:layout_height="28dp"
	        android:layout_toRightOf="@+id/login_title_seperator"
	        android:layout_alignBottom="@+id/login_title_seperator"
	        android:gravity="center"
	        android:text="Register"
	        android:textSize="18sp"
	        android:textColor="@android:color/white"
	        android:background="#b9b9b9"/>
	    <View 
	        android:id="@+id/login_title_bottom_space"
	        android:layout_width="match_parent"
	        android:layout_height="7dp"
	        android:layout_below="@+id/login_title_seperator"
	        android:layout_alignParentLeft="true"
	        android:background="#b9b9b9"
	        />
	    
	    <View 
	        android:id="@+id/login_title_seperator_bottom"
	        android:layout_width="3dp"
	        android:layout_height="3dp"
	        android:layout_below="@+id/login_title_bottom_space"
	        android:layout_centerHorizontal="true"
	        android:background="#b9b9b9"
	        />
	    <View 
	        android:id="@+id/login_title_login_bottom"
	        android:layout_width="match_parent"
	        android:layout_height="3dp"
	        android:layout_toLeftOf="@+id/login_title_seperator_bottom"
	        android:layout_alignBottom="@+id/login_title_seperator_bottom"
	        android:background="#b9b9b9"
	        />
	    <View 
	        android:id="@+id/login_title_register_bottom"
	        android:layout_width="match_parent"
	        android:layout_height="3dp"
	        android:layout_toRightOf="@+id/login_title_seperator_bottom"
	        android:layout_alignBottom="@+id/login_title_seperator_bottom"
	        android:background="#2fb382"
	        />
	    
	    <LinearLayout 
	        android:id="@+id/login_fields"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/login_title_seperator_bottom"
	        android:layout_centerHorizontal="true"
	        android:orientation="vertical"
	        >
	    <EditText
	        android:id="@+id/login_edit_email"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:ems="10"
	        android:inputType="textEmailAddress"
	        android:hint="Email"
	        android:background="@drawable/edit_text">
	    </EditText>
	
	    <EditText
	        android:id="@+id/login_edit_password"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:ems="10"
	        android:inputType="textPassword" 
	        android:hint="Password"
	        android:background="@drawable/edit_text"/>
	
	    <EditText
	        android:id="@+id/login_edit_password_repeat"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:ems="10"
	        android:inputType="textPassword" 
	        android:hint="Confirm Password"
	        android:background="@drawable/edit_text"/>
	    <TextView 
	        android:id="@+id/login_status"
	        android:layout_width="300dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp"
	        android:maxLines="2"
	        android:textSize="14sp"
	        android:textColor="@color/white"
	        android:visibility="gone"
	        />
	    </LinearLayout>
	    
	        
	    <Button
	        android:id="@+id/login_button_login"
	        android:layout_width="300dp"
	        android:layout_height="40dp"
	        android:layout_marginTop="10dp"
	        android:layout_below="@+id/login_fields"
	        android:layout_centerHorizontal="true"
	        android:text="Register"
	        android:textColor="@android:color/white"
	        android:textSize="20sp"
	        android:background="@drawable/green_button_background_selector"/>
	
	
	    
	    
	</RelativeLayout>
</LinearLayout>