<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    >

	<TextView 
	    android:id="@+id/instagram_photos_view_guide_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@+id/instagram_photos_view_header"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="Recent photos"
        android:textSize="16sp"
        android:textStyle="italic"

        android:drawablePadding="10dp"
	    />
    <GridView
        android:id="@+id/instagram_photos_view_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/instagram_photos_view_guide_text"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
    	android:stretchMode="columnWidth"
        android:numColumns="auto_fit"
        android:horizontalSpacing="6dp"
        android:verticalSpacing="6dp"
        android:columnWidth="97dp"
        />

</RelativeLayout>