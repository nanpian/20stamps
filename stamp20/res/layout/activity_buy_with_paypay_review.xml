<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paypal_background"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:id="@+id/ly_ship_to"
        android:layout_width="match_parent"
        android:layout_height="@dimen/paypal_review_ship_to_height"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/activity_paypal_activity_margin_end"
            android:layout_marginStart="@dimen/activity_paypal_activity_margin_start"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/ship_to"
            android:textAllCaps="true"
            android:textSize="@dimen/paypal_edittext_textsize" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ship_to_city"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/activity_paypal_activity_margin_end"
                android:layout_marginStart="@dimen/activity_paypal_activity_margin_start"
                android:gravity="bottom|start"
                android:text="江苏 南京"
                android:textSize="@dimen/paypal_edittext_textsize" />

            <TextView
                android:id="@+id/ship_to_city_zip"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/activity_paypal_activity_margin_end"
                android:layout_marginStart="@dimen/activity_paypal_activity_margin_start"
                android:gravity="top|start"
                android:text="南京，China， 21009"
                android:textSize="@dimen/paypal_edittext_textsize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_post_total_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/paypal_review_ship_to_height"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageview_stamp_review"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/activity_paypal_activity_margin_end"
            android:layout_marginStart="@dimen/activity_paypal_activity_margin_start"
            android:gravity="center"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview_post_card"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/activity_paypal_activity_margin_end"
                android:layout_marginStart="@dimen/activity_paypal_activity_margin_start"
                android:gravity="bottom|start"
                android:text="@string/text_post_card"
                android:textSize="@dimen/paypal_edittext_textsize" />

            <TextView
                android:id="@+id/textview_sheet"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="@dimen/activity_paypal_activity_margin_end"
                android:layout_marginStart="@dimen/activity_paypal_activity_margin_start"
                android:gravity="top|start"
                android:text="@string/text_sheet"
                android:textAllCaps="true"
                android:textSize="@dimen/paypal_edittext_textsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_total_money"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/activity_paypal_activity_margin_end"
            android:layout_marginStart="@dimen/activity_paypal_activity_margin_start"
            android:gravity="center"
            android:singleLine="true"
            android:text="$19.95"
            android:textSize="@dimen/paypal_edittext_textsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_paypal_activity_margin_end"
        android:layout_marginStart="@dimen/activity_paypal_activity_margin_start"
        android:layout_marginTop="@dimen/activity_paypal_activity_tail_margin_top" >

        <include layout="@layout/tail" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/secure_payment"
            android:textAllCaps="true" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/shipping_review_bottom_description"
            android:gravity="start"
            android:paddingEnd="@dimen/paypal_review_bottom_image_padding_end"
            android:paddingStart="@dimen/paypal_review_bottom_image_padding_start"
            android:scaleType="fitStart"
            android:src="@drawable/paypal_badge" />
    </LinearLayout>

</LinearLayout>